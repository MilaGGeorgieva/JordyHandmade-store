@model OrderStatusViewModel

@{
    ViewData["Title"] = "Order status";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="text-center row">
    <table>
        <caption>Your order dated @Model.StartDate</caption>
        <tr>
            <th>Product name</th>
            <th>Price</th>
            <th>Product quantity</th>
            <th>Product total</th>
            <th>Remove this product</th>
        </tr>
        @foreach (var product in Model.OrderedProducts)
        {
           <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.ProductQuantity</td>
                <td>@product.ProductTotal.ToString("f2")</td>
                <td>
                    <form class="input-group-sm" asp-controller="Order" asp-action="RemoveProduct" asp-route-id="@product.ProductId">
                        <input type="submit" value="Remove product" class="fs-6 btn btn-danger mb-3 p-2" />
                    </form>                    
                </td>
            </tr> 
        }
        <tr>
            <th colspan="3">Order total</th>
            <td><b>@Model.OrderTotal</b></td>
        </tr>
    </table>
    <a asp-controller="Product" asp-action="All" class="btn btn-primary">Continue adding products</a>
    <a asp-controller="Order" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning">Edit your order</a>
    <a asp-controller="Order" asp-action="Finalize" asp-route-id="@Model.OrderId" class="btn btn-success">Finalize your order</a>
</div> 