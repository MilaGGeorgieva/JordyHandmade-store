@model OrderFinalizeViewModel

@{
    ViewData["Title"] = "Finalize order";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<partial name="_OrderStatusPartial" model="@Model.OrderData" />

<h5 class="text-center">Your order will be delivered to the following address:</h5>

<div class="text-center row flex-column align-items-center">
    <div class="card col-4" style="width: 25rem; ">            
        <div class="card-body">
            <h5 class="card-title mt-1">Delivery data</h5>
                <p class="mb-0">Name: @Model.CustomerData.Name</p>
                <p class="mb-0">Address: @Model.CustomerData.StreetAddress</p>
                <p class="mb-0">Town: @Model.CustomerData.TownName @Model.CustomerData.ZipCode</p>
                <p class="mb-0">Telephone for contact: @Model.CustomerData.PhoneNumber</p>
                <p class="mb-0">Email for contact: @Model.CustomerData.Email</p>
        </div>
        <div class="mb-3 px-4">
            <p>After you submit your order data from this page your order will be sent to JordyHandmade for processing. 
                After that changes could be done only if you contact the online shop by phone</p>
            <form asp-controller="Order" asp-action="Finalized" asp-route-id="@Model.OrderData.OrderId">
                <input type="submit" class="btn btn-warning" value="Submit your order"/>
            </form>
                        
        </div>
    </div>
    <p> If you would like to make final changes to your order or delivery data before submitting, or you decide to cancel your order now - please use the links below</p>   
    <div class="text-center row align-items-center flex-column">    
          <a asp-controller="Order" asp-action="OrderStatus" asp-route-id="@Model.OrderData.OrderId" class="btn btn-warning w-50">Edit your order</a>
          <a asp-controller="Order" asp-action="DeliveryData" asp-route-id="@Model.OrderData.OrderId" class="btn btn-success w-50">Change delivery data</a>
          <a asp-controller="Order" asp-action="Delete" asp-route-id="@Model.OrderData.OrderId" class="btn btn-danger w-50">Cancel order</a>
    </div>
</div>
<div class="text-center">
    <a asp-controller="Order" asp-action="DeliveryTerms">Information about delivery and payment</a>
</div> 

