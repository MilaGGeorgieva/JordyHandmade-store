@model OrderStatusViewModel

@{
    ViewData["Title"] = "Delete order";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<form asp-action="Delete">
    <div class="text-center">
        <h5>Are sure you want to delete this order? If you reached this page by mistake please use the buttons below</h5>
    </div>

    <partial name="_OrderStatusPartial" model="@Model">

        <div class="text-center row align-items-center mb-3 flex-column">
            <input type="submit" value="Delete" class="btn btn-danger w-50" />            
    </div>

        <div class="text-center row align-items-center flex-column">
        <a asp-controller="Product" asp-action="All" class="btn btn-primary w-50">Continue shopping</a>
        <a asp-controller="Order" asp-action="Mine" class="btn btn-success w-50">My orders</a>
        <a asp-controller="Order" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning w-50">Edit your order</a>
    </div>

</form>


