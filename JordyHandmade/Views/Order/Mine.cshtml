@model IEnumerable<MyOrdersViewModel>

@{
    ViewData["Title"] = "My orders";
}


<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="text-center row">
    @foreach (var order in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">Order dated @order.StartDate</h5>
                <p class="mb-0"><span class="fw-bold">Status: </span>@order.Status</p>
                <p class="mb-0"><span class="fw-bold">Order total amount: </span>@order.TotalAmount</p>
            </div>

            @if (order.Status == "Collecting")
            {                
                <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit your order</a>
                <a asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Cancel your order</a>
            }
            
            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">View Details</a>
            
        </div>
    }
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}