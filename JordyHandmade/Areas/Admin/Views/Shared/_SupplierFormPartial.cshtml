@model SupplierFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.SupplierName" class="form-label-add-edit">Supplier Name</label>
                <input asp-for="@Model.SupplierName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.SupplierName" class="text-danger"></span>
            </div>            
            <div class="mb-3">
                <label asp-for="@Model.Website" class="form-label">Website</label>
                <input asp-for="@Model.Website" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="form-label">Email Address</label>
                <input asp-for="@Model.Email" class="form-control">
                <span asp-validation-for="@Model.Email" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">Phone number</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.StreetAddress" class="form-label">Street address</label>
                <input asp-for="@Model.StreetAddress" type="number" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TownName" class="form-label">Town</label>
                <input asp-for="@Model.TownName" type="number" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.TownName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ZipCode" class="form-label">Zip Code</label>
                <input asp-for="@Model.ZipCode" type="number" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ZipCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.IsActive" class="form-label-add-edit">Actively used supplier or not used anymore</label>
                <input asp-for="@Model.IsActive" class="form-control" aria-required="true">
                <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>
