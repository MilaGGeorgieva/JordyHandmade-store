@model CategoryFormModel

@{
    ViewData["Title"] = "Add category";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="card w-100">        
        <div class="card-body">
            <h3 class="card-title text-center">Please enter category data</h3>            
            <form asp-controller="Category" asp-action="Add">
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label">Category name</label>
                    <input asp-for="CategoryName" class="form-control" aria-required="true" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Zip code</label>
                    <input asp-for="Description" class="form-control" aria-required="true" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="btn btn-primary" type="submit" value="Add" />
                </div>
            </form>

        </div>

        <a asp-controller="Home" asp-action="Index" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to Admin Page</a>

    </div>
</div> 

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}