@model AllViewModel

@{
	ViewData["Title"] = "Delete Product";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<form asp-action="Delete">
	<div class="d-flex justify-content-center">
		<div class="card " style="width: 50rem;">
			<div class="card-body">
				<p class="card-text"><span class="fw-bold">Are sure you want to delete this product:</span></p>
				<h3 class="card-title text-center">@Model.Name</h3>
				<img class="card-img-top" src="@Model.ImageUrl" alt="Product image">
				<p class="card-text"><span class="fw-bold">Price:</span>@Model.Price</p>
			</div>
			<div class="mb-3 d-flex justify-content-center flex-column">
				<input type="submit" value="Delete" class="btn btn-danger" />
				<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to Admin Page</a>
			</div>
		</div>
	</div>
</form>
