@model TownFormModel

@{
	ViewData["Title"] = "Town changes";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />


<div class="d-flex justify-content-center">
	<div class="card " style="width: 50rem;">
		<div class="card-body">
			<p class="card-text"><span class="fw-bold">You selected the following town for changing:</span></p>
			<h3 class="card-title text-center">@Model.TownName @Model.ZipCode</h3>
		</div>
		<div class="mb-3 d-flex justify-content-center flex-column">			
			<a asp-area="Admin" asp-controller="Town" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
			<a asp-area="Admin" asp-controller="Town" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">Delete</a>
			<p>Again! Keep in mind that deleting a town will also delete all addresses associated with it!</p>
		</div>
	</div>
</div>
