@{
	ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
	<h2 class="display-4">Hello, Admin!</h2>
	<p class="lead mb-1 mt-3">
		This is your administrator area - you can <b>read</b>, <b>create</b>,
		<b>delete</b> and <b>edit</b> products, suppliers, product categories and towns.
		<br />You can <b>manage orders</b> or <b>create orders</b> yourself, you can <b>administrate materials in stock</b>, too!
	</p>
	<p class="lead mt-1">
		You can also see <b>all customers</b> and <b>their profiles</b> in the
		system.
	</p>
	<hr class="my-4">	
	<a asp-area="Admin" asp-controller="Category" asp-action="All"
	   class="btn btn-primary btn-lg">Product Categories changes</a>
	<span> | </span>
	<a asp-area="" asp-controller="Product" asp-action="All"
	   class="btn btn-primary btn-lg">Products changes</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="Town" asp-action="AllForSelect"
	   class="btn btn-primary btn-lg">Towns Changes</a>	
</div>
	
<hr />

<div class="mt-4 p-5 bg-light text-center">
	<a asp-area="Admin" asp-controller="Supplier" asp-action="All"
	   class="btn btn-primary btn-lg">Supplier administration</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="Order" asp-action="All"
	   class="btn btn-primary btn-lg">Orders administration</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="Customer" asp-action="All"
	   class="btn btn-primary btn-lg">All Customers</a>
</div>
